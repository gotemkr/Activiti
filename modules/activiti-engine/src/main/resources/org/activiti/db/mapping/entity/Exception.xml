<?xml version="1.0" encoding="UTF-8" ?>


<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 

<mapper namespace="org.activiti.engine.impl.persistence.entity.ExceptionEntityImpl">

	<!-- TASK INSERT -->
	<insert id="insertException" parameterType="org.activiti.engine.impl.persistence.entity.ExceptionEntityImpl">
    insert into ${prefix}ACT_RU_EXCEPTION (ID_, PROC_INST_ID_, EXECUTION_ID_, EXCEPTION_ACT_ID_, EXCEPTION_MESSAGE_, EXCEPTION_DETAILS_)
    values (#{id, jdbcType=VARCHAR},
            #{procInstId, jdbcType=VARCHAR},
            #{executionId, jdbcType=VARCHAR},
            #{exceptionActId, jdbcType=VARCHAR},
            #{exceptionMessage, jdbcType=VARCHAR},
            #{exceptionDetails, jdbcType=VARCHAR}
           )
  </insert>
	
	<!-- TASK update -->
	
	
	<!-- TASK delete -->
	<delete id="deleteExceptionByExecutionId" parameterType="string">
    	delete from ${prefix}ACT_RU_EXCEPTION where EXECUTION_ID_ = #{executionId}
  	</delete>
  	
  	<delete id="deleteExceptionByIds" parameterType="java.util.List">
    	delete from ${prefix}ACT_RU_EXCEPTION where ID_ IN (
    	<foreach collection="list" item="exceptionId" index="index" separator=",">
    		#{exceptionId, jdbcType=VARCHAR}
    	</foreach>
    	)
  	</delete>
  	
  	<delete id="deleteExceptions" parameterType="java.util.List">
    	delete from ${prefix}ACT_RU_EXCEPTION where ID_ IN (
    	<foreach collection="list" item="exception" index="index" separator=",">
    		#{exception.id, jdbcType=VARCHAR}
    	</foreach>
    	)
  	</delete>
		
	<!-- TASK SELECT -->  

  	<select id="selectAllException" parameterType="string" resultMap="exceptionResultMap">
   		select * from ${prefix}ACT_RU_EXCEPTION
  	</select>
  	
  	<select id="selectExceptionByProcInstId" parameterType="string" resultMap="exceptionResultMap">
   		select * from ${prefix}ACT_RU_EXCEPTION where PROC_INST_ID_ = #{procInstId, jdbcType=VARCHAR}
  	</select>
	
  	<select id="selectExceptionByExecutionId" parameterType="string" resultMap="exceptionResultMap">
   		select * from ${prefix}ACT_RU_EXCEPTION where EXECUTION_ID_ = #{parameter, jdbcType=VARCHAR}
  	</select>	

	<resultMap id="exceptionResultMap" type="org.activiti.engine.impl.persistence.entity.ExceptionEntityImpl">
	    <id property="id" column="ID_" jdbcType="VARCHAR" />
	    <result property="procInstId" column="PROC_INST_ID_" jdbcType="VARCHAR" />
	    <result property="executionId" column="EXECUTION_ID_" jdbcType="VARCHAR" />
	    <result property="exceptionActId" column="EXCEPTION_ACT_ID_" jdbcType="VARCHAR" />
	    <result property="exceptionMessage" column="EXCEPTION_MESSAGE_" jdbcType="VARCHAR" />
	    <result property="exceptionDetails" column="EXCEPTION_DETAILS_" jdbcType="VARCHAR" />
	</resultMap>

</mapper>